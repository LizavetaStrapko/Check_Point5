<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width" />
    <script src="/Scripts/jquery-1.10.2.js" type="text/javascript"></script>
    <script src="/Scripts/jquery-submenu.js"></script>
    @*@Styles.Render("~/Content/css")*@
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("jQ", false)
</head>
<body>
    <header>
        <div class="content-wrapper">
            <div class="float-left">
                <p class="site-title">
                    <a href="/">
                        <img src="/Images/Logo.png" />
                    </a>
                </p>
            </div>
            <div class="float-right">
                <section id="login">
                    @Html.Partial("_LoginPartial")
                </section>
                <nav>
                    <ul id="menu" сlass="drop-menu-main">
                        <li>
                            <span class="drop-down">Products<span class="arrow">&#9660;</span></span>
                            <div class="drop-menu-main-sub ">
                                <span class="title"></span>
                                @Html.ActionLink("Products", "Index", "Item")
                            </div>
                        </li>
                        @*@if (Roles.Provider.IsUserInRole(User.Identity.Name, "admin"))
                        {*@
                            <li>
                                <span class="drop-down">Customers<span class="arrow">&#9660;</span></span>
                                <div class="drop-menu-main-sub">
                                    <span class="title"></span>
                                    @Html.ActionLink("Customers", "Index", "Customers")
                                    @Html.ActionLink("CustomerSummary", "CustomerSummary", "Customers")
                                </div>
                            </li>
                            <li>
                                <span class="drop-down">Orders<span class="arrow">&#9660;</span></span>
                                <div class="drop-menu-main-sub">
                                    <span class="title"></span>
                                    @Html.ActionLink("Orders", "Index", "Order")
                                    @Html.ActionLink("Graphs", "Graphs", "Order")
                                </div>
                            </li>
                            <li>
                                <span class="drop-down">Managers<span class="arrow">&#9660;</span></span>
                                <div class="drop-menu-main-sub">
                                    <span class="title"></span>
                                    @Html.ActionLink("Managers", "Index", "Manager")
                                </div>
                            </li>
                        @*}*@
                    </ul>
                </nav>
            </div>
        </div>
    </header>
    <div id="body">
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
