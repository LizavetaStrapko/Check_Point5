@model IEnumerable<WebSite.Models.OrderSummary>
@{
    ViewBag.Title = "Orders";
}
@section jQ
{
    @Html.Partial("PartialjQTable")
}
<h2>Orders</h2>
@using (Html.BeginForm())
{
    <p>
        Find by Date: @Html.TextBox("SearchString")
        <Input type="submit" value="Search" />
    </p>
}
@using (Html.BeginForm())
{
    <p>
        Find by Manager: @Html.TextBox("SearchString2")
        <Input type="submit" value="Search" />
    </p>
}
<table class="footable" data-page-navigation=".pagination" data-page-size="10">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Order_Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer_Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Manager_Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfItems)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total_cost)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Order_Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Customer_Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Manager_Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumberOfItems)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Total_cost)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Order_Id })
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="10">
                <div class="pagination pagination-centered"></div>
            </td>
        </tr>
    </tfoot>
</table>
